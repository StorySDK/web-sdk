{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "noResolve": false
  },
  "include": [
    "index.ts",
    "components/**/*",
    "widgets/**/*",
    "hooks/**/*",
    "utils/**/*",
    "services/**/*",
    "constants/**/*",
    "core/**/*",
    "global.d.ts",
    "assets/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../core/**/*"
  ]
} 