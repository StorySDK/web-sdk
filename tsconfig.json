{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "packages",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017", "es2015.iterable"],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "lib"]
}
